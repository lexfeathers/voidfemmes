<div class="banner">
  <img src="/assets/images/I need to know your form.jpg" alt="Welcome to the Void Femmes website">
</div>

<h1 class="faded" style="margin-bottom: 0;">Latest:</h1>

<article class="homepage-excerpt">
  {# Get the latest post #}
  {% set latestPost = search.pages("type=posts draft=false", "published=desc", 1) %}
  {% asyncEach  post in latestPost %}
    <div class="homepage-excerpt-container">
      <div class="margin-bar"></div>
      <div>
        <h3>{{ post.title }}</h3>
    
        <a href="{{ post.url }}">
          <span class="homepage-excerpt-date">
            Posted {% include "/templates/date.njk" %} by {{ post.author }}
          </span>
        </a>
        <figure>
          {{ post.content | safe }}
        </figure>
      </div>
    </div>

    <a href="{{ post.url }}" class="button" style="text-align: right;">Read more -></a>
  {% endeach %}
</article>

