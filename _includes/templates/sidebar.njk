<div class="directory">
  <h3>Directory</h3>
  <div>
    <ul class="page-list">
      {% set menuItems = search.pages("type=pages", "order=asc") %}
      {% for menuItem in menuItems %}
        {% include "/templates/menu-item.njk" %}
      {% endfor %}
    </ul>
  </div>
</div>

<h4>Latest posts:</h4>
<div id="post-dir">
  <div class="margin-bar"></div>
  <menu>
    <ul class="post-list">
      {# Get posts that aren't drafts #}
      {% set posts = search.pages("type=posts draft=false", "published=desc", 5) %}
      {% for post in posts %}
        {% include "templates/post-item.njk" %}
      {% endfor %}
    </ul>
  </menu>
</div>
<a href="/pages/directory/" class="button">View all</a>

